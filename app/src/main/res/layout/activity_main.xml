<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="rmit.com.br.idadedecachorro.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cachorro"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginRight="142dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/caixaTextoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="46dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="31dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        android:text="Digite a idade do seu cachorro para descobrir a idade dele em anos humanos"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/botaoIdadeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descobrir_idade"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/caixaTextoId"
        android:layout_marginLeft="122dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/resultadoIdadeId"
        android:layout_width="358dp"
        android:layout_height="32dp"
        android:textColor="@android:color/background_light"
        android:textSize="25dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoIdadeId"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
